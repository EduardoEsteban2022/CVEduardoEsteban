@model IEnumerable<proyectoModelo.Models.ClienteModelo>

@{
    ViewBag.Title = "Clientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid pt-3 pb-3">
    <div class="row">
        <div class="col text-center text-uppercase">
            <h2 class="h3">Listado de Clientes</h2>
        </div>
    </div>


    <div class="row pt-2 pb-3">
        <div class="col text-left">
            <button class="btn btn-success" type="button" onclick="location.href='@Url.Action("AgregarCliente", "Cliente")'">Agregar Cliente</button>
            <button class="btn btn-danger" type="button" onclick="location.href='@Url.Action("GenerarPdf", "Cliente")'">Descargar Pdf</button>

        </div>
    </div>


    <div class="row">
        <div class="col-12">
            <div class="card shadow p-3 mb-5 bg-white rounded">

                <table class="table  table-striped">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.nombres)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.apellidos)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.fechaString)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.sueldo)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
            {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.nombres)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.apellidos)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.fechaString)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.sueldo)
                            </td>
                            <td>
                                @*  @Html.ActionLink("Editar", "EditarCliente", new { id = item.id }) |*@
                                <button class="btn btn-warning" type="button" onclick="location.href='@Url.Action("EditarCliente", "Cliente", new { id = item.id })'">Editar</button>
                                @*  @Html.ActionLink("Eliminar", "EliminarCliente", new { id = item.id })*@
                                <button class="btn btn-danger" type="button" onclick="location.href='@Url.Action("EliminarCliente", "Cliente",new { id = item.id })'">Eliminar</button>
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>

